# Import des Active Directory Moduls
Import-Module ActiveDirectory

# OU-Pfad und das Attribut für die Webseite definieren
$ouPath = "OU=Testou,DC=Testumgebungmax,DC=local" # Ändern Sie dies auf den Pfad Ihrer spezifischen OU
$website = "http://DerSupertester.de"

# Benutzer in der spezifizierten OU suchen
$users = Get-ADUser -Filter * -SearchBase $ouPath

# Überprüfen, ob Benutzer gefunden wurden
if ($users -ne $null) {
    # Durchgehen aller Benutzer in der OU
    foreach ($user in $users) {
        # Webseite im 'wWWHomePage'-Attribut für den gefundenen Benutzer aktualisieren
        Set-ADUser -Identity $user -Replace @{wWWHomePage=$website}
        Write-Host "Webseite für Benutzer [$($user.Name)] auf [$website] aktualisiert."
    }
} else {
    Write-Host "Keine Benutzer in der OU [$ouPath] gefunden."
}
